SELECT  
    F.FOLIO_TYPE DOC,
    F.BILL_NO CONS ,
    F.business_date  F_FACTUR,
    F.business_date  F_CORTE,
    F.resort CIA,
    CASE WHEN N.ID_TYPE = '1' THEN '13' WHEN N.ID_TYPE = '3' THEN '41' 
    WHEN N.ID_TYPE = '5' THEN '22' WHEN N.ID_TYPE = '30' THEN '12' ELSE '31' END AS TIP,
    NVL(N.TAX1_NO, '222222223') AS TERCERO,
    F.GUEST_NAME AS HUESPED,
    T.ACCOUNT_NO AS NIT_EMP,
    F.PAYEE_NAME AS RAZON_SOCIAL_EMP,
    N.NAME_KEYWORDS SUC,
    N.NATIONALITY NAC,
    F.RESV_NAME_ID RESERV,
    REPLACE(F.TOTAL_GROSS, '.', ',') AS VALOR,
    F.ROOM HAB,
    F.BILL_NO FACTURA,
    N.NAME_KEYWORDS RECIBO,
    N.FIRST NOMBRES,
    N.SNAME APELLIDOS,
    F.RESORT_FULL_ADDRESS ADDRESS1,
    N.PHONE_NO PHONE_NO,
    N.CITY CITY,
    N.COUNTRY COUNTRY,
    N.EMAIL EMAIL,
    '1102' CODE_POSTAL
    
    FROM  
    FOLIO$_TAX F
INNER JOIN 
    NAME_VIEW N 
    ON F.NAME_ID = N.NAME_ID
INNER JOIN 
    ar_folio_tax T
    ON T.BILL_NUMBER = F.BILL_NO
    
    where business_date = TO_DATE('03-DEC-2024', 'DD-MON-YYYY') 
